<center>
<h2>생년월일을 입력해주세요</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %> <br>

  <div id="step1">
    <div class="field">
      <%= f.label :born_year %><br />
      <%= f.text_field :born_year, autocomplete: "off" %>
    </div>
    
    <div class="field">
      <%= f.label :birthday %><br />
      <%= f.text_field :birthday, autocomplete: "off" %>
    </div> <br >

    <div>
      <a href="#" class="next-step">다음 스텝으로</a>
    </div>
    
  </div>
  <div id="step2" style="display:none;">
    <div class="field">
      <%= f.label :zodiac_sign %><br />
      <%= f.text_field :zodiac_sign, autocomplete: "off" %>
    </div>
    
    <div class="field">
      <%= f.label :animal_sign %><br />
      <%= f.text_field :animal_sign, autocomplete: "off" %>
    </div> <br >

    <div>
      <%= f.submit %>  
    </div>
    
  </div>
</center>

<% end %>
</center>
