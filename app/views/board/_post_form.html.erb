<!--게시글 보여주는 폼-->
<center>
    <div class="masonry-item">
        <div class="post_form" style="border-color:<%= $COLOR_ARRAY[post.color] %>">
           <div class="post_context_wrapper">
               <div class="left"></div>
               <div class="right"></div>
               <a href ="/board/detail/<%= post.id %>">
                   <div class="context"><%=raw post.context %></div>
               </a>
           </div>
           <div class="time_section">
               <span class="glyphicon glyphicon-time" aria-hidden="true"></span> <%= time_ago_in_words(post.created_at) %> 전
           </div>
           <!--<a href="#" id="like_button">-->
           <img src='/assets/1_unlike.png' width=12 height=18/> <%= post.like_count %>
           <!--</a>-->
           &nbsp;&nbsp;
           <img src='/assets/2_not-reply.png' width=18 height=16/> <%= post.replies.count %>
        </div>    
        <div class="link_section">
            <img src="/assets/link_line.1.png" style="width:60%"/>
        </div>
        
    </div>
</center>


