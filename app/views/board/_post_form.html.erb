<!--게시글 보여주는 폼-->
<div class="masonry-item">
    <!--<div class="link_section_up" style="background-color:<%= $COLOR_ARRAY[post.color] %>">-->
    <div class="link_section_up" style="background:-webkit-linear-gradient(left, <%= $COLOR_ARRAY[post.color] %> 40%, rgba(0, 0, 0, 0) 100%)" >
    </div>
    <center>
        <div class="post_form" style="border-color:<%= $COLOR_ARRAY[post.color] %>">
           <div class="post_context_wrapper">
               <div class="left"></div>
               <div class="right"></div>
               <a href ="/board/detail/<%= post.id %>">
                   <div class="context"><%=raw post.context %></div>
               </a>
           </div>
           <div class="time_section">
               <span class="glyphicon glyphicon-time" aria-hidden="true"></span> <%= time_ago_in_words(post.created_at) %> 전
           </div>
           <!--<a href="#" id="like_button">-->
           <img src='/assets/1_unlike.png' width=12 height=18/> <%= post.like_count %>
           <!--</a>-->
           &nbsp;&nbsp;
           <img src='/assets/2_not-reply.png' width=18 height=16/> <%= post.replies.count %>
        </div>                       
    </center>
    <!--<div class="link_section_down" style="background-color:<%#= $COLOR_ARRAY[post.color] %>">-->
    <div class="link_section_down" style="background:-webkit-linear-gradient(left, rgba(0, 0, 0, 0) 0%, <%= $COLOR_ARRAY[post.color] %> 60%)">
    </div>
</div>
    


